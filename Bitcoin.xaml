<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovoApp.Bitcoin"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="Bitcoin">

    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <StackLayout
                     Grid.Row="0" 
                     Padding="20"
                     Spacing="10" />
        <StackLayout/>


            <Label Text="Explore o mundo dos ativos digitais!"
                   FontSize="Title"
                   HorizontalTextAlignment="Center" />
        <Button Text="Login" />
        <Button Text="Cadastre-se" />


        <ListView Grid.Row="1"
                  ItemsSource="{Binding ListaCriptomoedas}" >
        </ListView>

            <Label Text="SISTEMA DE NOTIFICAÇÕES:"
               FontSize="Small"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Grid.Row="1" />
            </Grid>
</ContentPage>