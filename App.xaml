<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NovoApp"
             x:Class="NovoApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Tema Light -->
            <Style x:Key="LightTheme" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#F2F9FF" />
              <!-- <Setter Property="TextColor" Value="Black" /> -->
            </Style>
            
            <!-- Tema Dark -->
            <Style x:Key="DarkTheme" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#121212" />
               <!-- <Setter Property="TextColor" Value="White" />  -->
            </Style>
            
        </ResourceDictionary>


    </Application.Resources>
</Application>